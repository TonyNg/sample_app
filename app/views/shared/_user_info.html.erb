<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 150 %>
    <br>
    <span class="user name">
      <%= current_user.name %>
    </span>
    <br>
    <span class="microposts">
      <%= pluralize(current_user.microposts.count, "Blurb") %>
    </span>
  </a>
</div>
