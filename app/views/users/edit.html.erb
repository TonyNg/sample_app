<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :"email (your csupomona.edu address)"%><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :"Facebook webpage (required for identity confirmation)" %><br />
    <%= f.text_field :facebook %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
   <div class="field">
    <%= f.label :"Year (For example: 3rd)" %><br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :"Major/Concentration" %><br />
    <%= f.text_field :major %>
  </div>
  <div class="field">
    <%= f.label :"I'm looking to buy these books" %><br />
    <%= f.text_field :books_buy %>
  </div>
  <div class="field">
    <%= f.label :"I'm looking to sell these books" %><br />
    <%= f.text_field :books_sell %>
  </div>
  <div class="field">
    <%= f.label :"I love to eat at these restaurants" %><br />
    <%= f.text_field :restaurants %>
  </div>
  <div class="field">
    <%= f.label :"My Sports/Clubs/Activities/Interests" %><br />
    <%= f.text_field :interests %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">change</a>
</div>

