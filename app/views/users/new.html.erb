<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="form-stacked">
  <div class="field">
    <%= f.label :"name" %>
    <%= f.text_field :name, :placeholder => "Your real name" %>
  </div>
    <div class="field">
    <%= f.label :"Facebook Page"%>
    <%= f.text_field :facebook, :placeholder => "Required for identity confirmation" %>
  </div>
  <div class="field">
    <%= f.label :"email" %>
    <%= f.text_field :email,  :placeholder => "Your csupomona.edu address"%>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %> 
  </div>
  <br>
  
  <div class="alert-message info">
  <a class="close" href="#"></a>
  <p>You may skip the fields below and fill them in later.  &darr;  Just scroll down to the bottom to finish signing up. &darr; </p>
</div>
  
  <br>
  <br>
  <!-- For a list of majors <%= select(:user, :year, [['Accounting', 1], ['Aerospace Engineering', 2], ['Agriculture', 3],
  ['Agricultural Science', 4],['Animal Health Science', 5],['Anthropology', 6],['Apparel Merchandising & Management', 7],['Architecture', 8],['Art', 9],
  ['Biology', 10],['Biotechology', 11],['Botany', 12],['Chemical & Materials Engineering', 13],['Chemistry', 14],
  ['Civil Engineering', 15],['Communication', 16],['Computer Engineering', 17],['Computer Information Systems', 18],['Computer Science', 19],
  ['Construction Engineering Technology', 20],['E-Business', 21],['Economics', 22],['Education', 23],['Electrical Engineering', 24],
  ['Electronics & Computer Engineering', 25],['Engineering Management', 26],['Engineering Technology', 27],['English', 28],['Environmental Biology', 29],
  ['Finance, Real Estate & Law', 30],['Food Marketing & Agribusiness Management', 31],['Food Science & Technology', 32],['Foods & Nutrition', 33],['Gender, Ethnicity & Multicultural Studies', 34],
  ['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],
  ['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],
  ['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],['Finance, Real Estate & Law', 30],
  ['New York', 35]]) %> -->
  
  <div class="field">
    <%= f.label :"Year" %>
    <%= f.select :year, (1..8).map { |year| [ year.ordinalize, year ] } %>
  </div>
  <div class="field">
    <%= f.label :"Major/Concentration" %>
    <%= f.text_field :major %>
  </div>
  <div class="field">
    <%= f.label :"I'm looking to buy these books/furniture/electronics:" %>
    <%= f.text_area :books_buy %>
  </div>
  <div class="field">
    <%= f.label :"I'm looking to sell these books/furniture/electronics:" %>
    <%= f.text_area :books_sell %>
  </div>
  <div class="field">
    <%= f.label :"I love to eat at these restaurants:" %>
    <%= f.text_field :restaurants %>
  </div>
  <div class="field">
    <%= f.label :"My Sports/Clubs/Activities/Interests:" %>
    <%= f.text_field :interests %>
  </div>
  <div class="checkbox">
  <label> By checking this box, I agree to the Terms of Agreement below.</label>
  <%= f.check_box :check %> 
  </div>
  <br>
    <%= f.submit "Sign up", :class => "btn primary" %>
  </div>
  </div>
<% end %>
